---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="description" content="Thiago Pereira's Web Site">
		<meta name="keywords" content="Software Development, CSS, JavaScript, Typescript, React, React Native">
		<meta name="author" content="Thiago Pereira">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)),  rgb(32, 9, 126) 40%, white 30%);
	}
	html {
		font-family: Liberation Mono, sans-serif;
		background-color: #131212f3;
	}
	code {
		font-family: Liberation Mono, sans-serif;
	}
	body {
    margin: auto;
    max-width: 100ch;
		padding: 1rem;
	}
</style>
